name: ewars_plus

target: disease_cases
required_covariates: 
  - rainfall
  - mean_temperature
  - population

supported_period_type: week
allow_free_additional_continuous_covariates: false

meta_data: 
  display_name: EWARS Plus 
  description: A wrapper around the ewars plus model developed by Laith et. al. Uses the ewars plus docker image maquins/ewars_plus_api:Upload. For experimental/testng use only.
  author: Laith et. al. (adapted by the chap team)
  author_assessed_status: red
  organization: HISP Centre, University of Oslo
  organization_logo_url: https://landportal.org/sites/default/files/2024-03/university_of_oslo_logo.png
  contact_email: knut.rand@dhis2.org
  citation_info: >
    Climate Health Analytics Platform. 2025. "CHAP-EWARS model".
    HISP Centre, University of Oslo.
    https://dhis2-chap.github.io/chap-core/external_models/overview_of_supported_models.html


adapters:
  week: "week" 
  year: "year"
  district: "location"

entry_points:
  train:
    parameters:
      train_data: str
      model: str
    command: "python main.py train {train_data} demo_data/laos_province_shapefile.GEOJSON {model}"
  predict:
    parameters:
      historic_data: str
      future_data: str
      model: str
      out_file: str
    command: "python main.py predict  {model} {historic_data} {future_data} {out_file} demo_data/laos_province_shapefile.GEOJSON"
